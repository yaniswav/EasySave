<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EasySave.Views.MainWindow"
        Title="EasySave"
        Width="1280" Height="720">
    <DockPanel>
        <!-- Barre latérale pour la navigation -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#333">
            <Button x:Name="BackupButton" Content="SAUVEGARDE" Click="BackupButton_Click"/>
            <Button x:Name="SettingsButton" Content="PARAMÈTRES" Click="SettingsButton_Click"/>
        </StackPanel>

        <!-- Zone de contenu principal -->
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>