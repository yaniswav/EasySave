<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="localeConfig" type="EasySaveConsole.LocaleConfigSection, EasySaveConsole" />
        <section name="backupJobsConfig" type="EasySaveConsole.BackupJobsConfigSection, EasySaveConsole" />
    </configSections>

    <localeConfig>
        <add key="CurrentLocale" value="en-US" />
    </localeConfig>

    <backupJobsConfig>
        <!-- Example of adding backup jobs -->
        <add key="Job1" sourceDir="C:\Source1" destinationDir="D:\Dest1" type="Complete" />
        <add key="Job2" sourceDir="C:\Source2" destinationDir="D:\Dest2" type="Differential" />
    </backupJobsConfig>

    <appSettings>
        <add key="MaxBackupJobs" value="5" />
    </appSettings>
</configuration>
